{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/lib/*": ["src/lib/*"],
      "@/styles/*": ["src/styles/*"],
      "@/data/*": ["src/data/*"]
    },
    "types": ["@astrojs/react/types", "@testing-library/jest-dom", "vite/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "tests",
    "astro.config.mjs",
    "tailwind.config.cjs",
    "postcss.config.cjs",
    "prettier.config.cjs",
    "eslint.config.mjs",
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  "exclude": ["dist", ".astro", ".vite", "node_modules", "coverage", "playwright-report", "test-results"]
}
